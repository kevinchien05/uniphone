    <script>
        document.getElementById('send').onclick =() => {
            contact_name = document.getElementById('c_name').value;
            contact_email = document.getElementById('c_email').value;
            contact_phone = document.getElementById('c_phone').value;
            contact_message = document.getElementById('c_message').value;
            if(contact_name != '' && contact_email != '' && contact_phone != '' && contact_message != ''){
                axios({
                    method:'post',
                    url:'/api/comments',
                    data:{
                        c_name : contact_name,
                        c_email : contact_email,
                        c_phone : contact_phone,
                        c_message : contact_message,
                    }
                }).then((results) => {
                    alert(`Comment Send Success. Response will be sent to: ${contact_email}`);
                    window.location = '/';
                }).catch((err) => {
                    alert(`Error: ${err}`);
                });
            }else{
                alert('Pengisian tidak boleh kosong');
            }
        }
