<body class="main-layout">
    <div class="loader_bg">
        <div class="loader"><img src="images/loading.gif" alt="#" /></div>
    </div>
    <div class="header" style="background-color: red;width: 100%;border: 1px solid black; height: 60px;">
        <div class="btn" style="float: left;">
            <a href="/product"><button><img src="icon/back.png" width="30px"></button></a>
        </div>
        <center>
            <div class="icon_mid" style="float: left;padding-left: 40%;">
                <div class="logo">
                    <a href="/"><img src="images/logo.png" alt="#" width="150px" height="50px"></a>
                </div>
            </div>
        </center>
        <div class="btn" style="float: right;">
            <% if (!i_user) { %>
                <div class="cart" style="clear: both; float: right;">
                    <a href="/login"><img src="icon/cart.png" width="30px"></a>
                </div>
                <div class="home" style="float: right;padding-right: 20px;">
                    <a href="/login"><img src="icon/wishlist.png" width="30px"></a>
                </div>
            <% } else { %>
                <div class="cart" style="clear: both; float: right;">
                    <a href="/cart"><img src="icon/cart.png" width="30px"></a>
                </div>
                <div class="home" style="float: right;padding-right: 20px;">
                    <a href="/wish"><img src="icon/wishlist.png" width="30px"></a>
                </div>
            <% } %>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-xs-4 item-photo">
                <img style="max-width:100%;" src=<%=products.photo %> />
            </div>
            <div class="col-xs-5" style="border:0px solid gray;margin-top: 40px;">
                <h3>
                    <%= products.name %>
                </h3>
                <h5 style="color:#337ab7">Product by : <a href="#">
                        <%= products.brand %>
                    </a></h5>

                <h6 class="title-price"><small>PRICE</small></h6>
                <h3 style="margin-top:0px;">Rp. <%= products.price %> - <%= products.price3 %>
                </h3>

                <div class="section">
                    <h6 class="title-attr" style="margin-top:15px;"><small>COLOR</small></h6>
                    <div>
                        <div class="attr2" id="color1">
                            <%= products.color %>
                        </div>
                        <div class="attr2" id="color2">
                            <%= products.color2 %>
                        </div>
                        <div class="attr2" id="color3">
                            <%= products.color3 %>
                        </div>
                    </div>
                </div>
                <div class="section" style="padding-bottom:5px;">
                    <h6 class="title-attr"><small>ROM</small></h6>
                    <div>
                        <div class="attr2" id="tipe1" onclick=<%='rom_button('
                            +products.price+','+products.price2+','+products.price3+','+products.rom+','+products.rom2+','+products.rom3+')'
                            %> >
                            <%= products.rom %>
                        </div>
                        <div class="attr2" id="tipe2" onclick=<%='rom_button('
                            +products.price+','+products.price2+','+products.price3+','+products.rom+','+products.rom2+','+products.rom3+')'
                            %>>
                            <%= products.rom2 %>
                        </div>
                        <div class="attr2" id="tipe3" onclick=<%='rom_button('
                            +products.price+','+products.price2+','+products.price3+','+products.rom+','+products.rom2+','+products.rom3+')'
                            %>>
                            <%= products.rom3 %>
                        </div>
                    </div>
                </div>
                <div class="section" style="padding-bottom:20px;">
                    <h6 class="title-attr"><small>Quantity</small></h6>
                    <div>
                        <div class="btn" id="kurang" style="border: 1px solid black;"><img src="icon/minus.png"
                                width="10px"><span class="glyphicon glyphicon-minus"></span></div>
                        <input value="1" id="jumlah" />
                        <div class="btn" id="tambah" style="border: 1px solid black;"><img src="icon/plus.png"
                                width="10px"><span class="glyphicon glyphicon-plus"></span></div>
                    </div>
                </div>

                <div class="section" style="padding-bottom: 20px;">
                    <h6 class="title-attr"><small>Price</small></h6>
                    <p>Rp.<input value="0" disabled style="border: none;" id="harga"></p>
                </div>

                <div class="section" style="padding-bottom:20px;">
                    <% if (!i_user) { %>
                        <a href="/login"><button class="btn btn-success" id="cart"><span style="margin-right:20px"
                                    class="glyphicon glyphicon-shopping-cart" aria-hidden="true"><img
                                        src="icon/cart.png" width="20px" style="float: left;"></span> Add to
                                Cart</button></a>
                        <a href="/login"><button class="btn btn-success" id="wish" style="margin-top: 10px;"><span
                                    style="margin-right:20px" class="glyphicon glyphicon-shopping-cart"
                                    aria-hidden="true"><img src="icon/wishlist.png" width="20px"
                                        style="float: left;"></span> Add to Wishlist</button></a>
                        <% } else { %>
                            <button onclick="cart()" class="btn btn-success" id="cart"><span style="margin-right:20px"
                                    class="glyphicon glyphicon-shopping-cart" aria-hidden="true"><img
                                        src="icon/cart.png" width="20px" style="float: left;"></span> Add to
                                Cart</button>
                            <button onclick="wish()" class="btn btn-success" id="wish" style="margin-top: 10px;"><span
                                    style="margin-right:20px" class="glyphicon glyphicon-shopping-cart"
                                    aria-hidden="true"><img src="icon/wishlist.png" width="20px"
                                        style="float: left;"></span> Add to
                                Wishlist</button>
                            <% } %>
                </div>
            </div>

            <div><input type="text" id="rom" value="" style="visibility: hidden;">
                <input type="text" id="color" value="" style="visibility: hidden;">
                <input type="text" id="photo" value="<%= products.photo %> " style="visibility: hidden;">
                <input type="text" id="name" value="<%= products.name %> " style="visibility: hidden;">
                <input type="text" id="pro" value="<%= products.id %> " style="visibility: hidden;">
                <input type="text" id="price" value="" style="visibility: hidden;">
            </div>

            <div class="col-xs-9" style="position: static; width: 100%;">
                <ul class="menu-items">
                    <li class="active" id="detail" onclick="detail('<%= products.details %>')">Details</li>
                    <li id="box" onclick="box('<%= products.box %>')">Box Include</li>
                </ul>
                <div style="width:80%;border-top:1px solid silver" id="details">
                    <p style="padding:15px;" id="isian">
                        <small>
                           <%= products.details %> 
                        </small>
                    </p>

                </div>
            </div>
        </div>
    </div>
    <footer>
        <div id="contact" class="footer">
            <div class="container">
                <div class="row pdn-top-30">
                    <div class="col-md-12 ">
                        <div class="footer-box">
