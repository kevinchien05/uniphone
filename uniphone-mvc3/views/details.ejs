    <script>
        color = document.getElementById("color")
        document.getElementById("color1").onclick = function () {
            color.value = "blue"
        }
        document.getElementById("color2").onclick = function () {
            color.value = "black"
        }
        document.getElementById("color3").onclick = function () {
            color.value = "white"
        }
    </script>
    <script>
        let detBut = (a, b) => {
            contoh = document.getElementById("contoh");
            isian = document.getElementById("isian");
            document.getElementById("details").onclick = () => {
                contoh.value = "details"
                isian.innerHTML = "details"
            }
            document.getElementById("box").onclick = () => {
                contoh.value = "box"
                isian.innerHTML = "box"
            }
        }
    </script>
    <script>
        let rom_button = (a, b, c, d, e, f) => {
            const harga = document.getElementById("harga");
            const jumlah = document.getElementById("jumlah");
            const price = document.getElementById("price");
            let rom = document.getElementById("rom");
            let akhir = ""
            const temp = a;
            const temp2 = b;
            const temp3 = c;
            document.getElementById("tipe1").onclick = function () {
                harga.value = a
                harga.value = temp * jumlah.value
                akhir = harga.value
                rom.value = d
                price.value = a
                document.getElementById("tambah").onclick = () => {
                    jumlah.value = parseInt(jumlah.value) + 1
