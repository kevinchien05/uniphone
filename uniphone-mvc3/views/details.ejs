                }
                document.getElementById("kurang").onclick = () => {
                    console.log(temp, akhir)
                    jumlah.value = parseInt(jumlah.value) - 1
                    harga.value -= temp
                }
            }
            document.getElementById("tipe2").onclick = function () {
                harga.value = b
                harga.value = temp2 * jumlah.value
                akhir = harga.value
                rom.value = e
                price.value = b
                document.getElementById("tambah").onclick = () => {
                    jumlah.value = parseInt(jumlah.value) + 1
                    harga.value = temp2 * jumlah.value
                }
                document.getElementById("kurang").onclick = () => {
                    jumlah.value = parseInt(jumlah.value) - 1
                    harga.value -= temp2
                }
            }
            document.getElementById("tipe3").onclick = function () {
                harga.value = c
                harga.value = temp3 * jumlah.value
                akhir = harga.value
                rom.value = f
                price.value = c
                document.getElementById("tambah").onclick = () => {
                    jumlah.value = parseInt(jumlah.value) + 1
                    harga.value = temp3 * jumlah.value
                }
                document.getElementById("kurang").onclick = () => {
                    jumlah.value = parseInt(jumlah.value) - 1
                    harga.value -= temp3
                }
            }
        }
    </script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script>
        let wish = () => {
            axios({
                method: 'post',
                url: '/api/wish',
                data: {
                    product_id: document.getElementById("pro").value,
                    photo: document.getElementById("photo").value,
                    name: document.getElementById("name").value,
                    rom: document.getElementById("rom").value,
                    color: document.getElementById("color").value,
                    price: document.getElementById("price").value
                }
            }).then((result) => {
                window.location = "/product";
            }).catch((err) => {
                alert('error ' + err)
            });
        }
    </script>
    <script>
        let cart = () => {
            axios({
                method: 'post',
                url: '/api/cart',
                data: {
                    product_id: document.getElementById("pro").value,
                    photo: document.getElementById("photo").value,
                    name: document.getElementById("name").value,
                    rom: document.getElementById("rom").value,
                    color: document.getElementById("color").value,
                    price: document.getElementById("price").value,
                    quantity: document.getElementById("jumlah").value
                }
            }).then((result) => {
                window.location = "/product";
            }).catch((err) => {
                alert('error ' + err)
            });
        }
    </script>
    <script>
        let detail = (a) => {
            let isian = document.getElementById("isian")
            isian.innerHTML = "<small> "+a+" </small>"
        }
        let box = (a) => {
            let isian = document.getElementById("isian")
            isian.innerHTML = "<small> "+a+" </small>"
        }
    </script>
